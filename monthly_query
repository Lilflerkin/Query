SELECT 
    b.module_name,
    b.schedule_name,
    b.job_name,
    b.description,
    b.sla,
    b.frequency,
    DATE_ADD(LAST_DAY(ADD_MONTHS(from_unixtime(unix_timestamp()), -c.month_offset)), 1) AS month_start,
    DATE_ADD(DATE_ADD(LAST_DAY(ADD_MONTHS(from_unixtime(unix_timestamp()), -c.month_offset)), 1),
             cast(trim(b.sla, 'WD ') as int) - 1) AS executiondate
FROM (
    SELECT 
        module_name,
        schedule_name,
        job_name,
        description,
        sla,
        frequency
    FROM bsl_cacl_risk_sox_db.cacl_jobs_details
    WHERE frequency = 'Monthly'
) b
CROSS JOIN (
    SELECT 0 AS month_offset UNION ALL SELECT 1 UNION ALL SELECT 2 UNION ALL 
    SELECT 3 UNION ALL SELECT 4 UNION ALL SELECT 5
) c
WHERE 
    DATE_ADD(DATE_ADD(LAST_DAY(ADD_MONTHS(from_unixtime(unix_timestamp()), -c.month_offset)), 1),
             cast(trim(b.sla, 'WD ') as int) - 1) >= '2024-02-01'
    AND DATE_ADD(DATE_ADD(LAST_DAY(ADD_MONTHS(from_unixtime(unix_timestamp()), -c.month_offset)), 1),
                 cast(trim(b.sla, 'WD ') as int) - 1) <= from_unixtime(unix_timestamp())
    AND DAYOFWEEK(DATE_ADD(DATE_ADD(LAST_DAY(ADD_MONTHS(from_unixtime(unix_timestamp()), -c.month_offset)), 1),
                          cast(trim(b.sla, 'WD ') as int) - 1)) BETWEEN 2 AND 6
ORDER BY executiondate;
